{
  "root": true,
  "extends": [
    "@luludev/eslint-config/common",
    "@luludev/eslint-config/typescript",
    "@luludev/eslint-config/browser",
    "@luludev/eslint-config/prettier"
  ],
  "parserOptions": {
    "project": "./tsconfig.eslint.json"
  },
  "rules": {
    "jsdoc/no-bad-blocks": ["error", {"ignore": ["vite-ignore"]}]
  },
  "ignorePatterns": ["**/dist/*", "vite-env.d.ts"],
  "env": {
    "jest": true
  }
}
